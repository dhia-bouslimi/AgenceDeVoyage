{% extends "base.html.twig" %}

{% block body %}

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container-fluid">



                <div class="row">
                    <h1>Ajouter chambre</h1>
                </div>
                <div class="row">
                    <a href="{{ path('listeChambre') }}">
                        <i class="fa fa-arrow-circle-left" style="font-size: 30px;"></i>

                    </a>

                </div>


                <div class="row">

                    <div class="col-md-12"  style="display: flex; justify-content: center;align-items:center;width: 100%" >
                        <div class="card-box">
                            <div class="dropdown pull-right">
                                <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                                    <i class="mdi mdi-dots-vertical"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Action</a>
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Another action</a>
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Something else</a>
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Separated link</a>
                                </div>
                            </div>

                            <h1 class="header-title m-t-0 m-b-30">Chambre</h1>
                            {{ form_start(f, {attr: {novalidate: 'novalidate'}}) }}

                            <div class="form-group">
                                <label for="nom">numChambre*</label>

                                {{ form_widget(f.numChambre, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(f.numChambre, {'attr': {'class': 'text-danger'}}) }}

                            </div>
                            <div class="form-group">
                                <label for="nom">numEtage</label>


                                {{ form_widget(f.numEtage, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(f.numEtage, {'attr': {'class': 'text-danger'}}) }}

                            </div>
                            <div class="form-group">

                                <label for="nom">typeNbBLit</label>


                                {{ form_widget(f.typeNbBLit, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(f.typeNbBLit, {'attr': {'class': 'text-danger'}}) }}

                            </div>
                            <div class="form-group">

                                <label for="nom">prixParNuit</label>


                                {{ form_widget(f.prixParNuit, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(f.prixParNuit, {'attr': {'class': 'text-danger'}}) }}

                            </div>
                            <div class="form-group">

                                <label for="nom">hotel</label>


                                {{ form_widget(f.hotel, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(f.hotel, {'attr': {'class': 'text-danger'}}) }}

                            </div>



                            {#   <div class="form-group">

                                <div class="col-sm-12">
                                    <div class="card-box">

                                        <div class="dropdown pull-right">
                                            <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                                                <i class="mdi mdi-dots-vertical"></i>
                                            </a>
                                        </div>

                                        <h4 class="header-title m-t-0 m-b-30">Image</h4>
                                        {{ form_widget(f.image, {'attr': {'class': 'dropify','data-height':'200'}}) }}

                                    </div>
                                </div>
                            </div>    #}

                            <!--    <div class="form-group">

                            <label for="nom">Image*</label>

                           {# {{ form_widget(f.image, {'attr': {'class': 'form-control'}}) }} #}
                          {#  {{ form_errors(f.image, {'attr': {'class': 'text-danger'}}) }}  #}

                        </div>   -->








                            <div class="form-group text-right m-b-0">
                                {{ form_widget(f.Submit, {'attr': {'class': 'btn btn-primary waves-effect waves-light'},'label': 'Ajouter'}) }}
                                <button type="reset" class="btn btn-secondary waves-effect waves-light m-l-5">Annuler
                                </button>

                            </div>


                            {{ form_end(f) }}

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $('.dropify').dropify({
            messages: {
                'default': 'Drag and drop a file here or click',
                'replace': 'Drag and drop or click to replace',
                'remove': 'Remove',
                'error': 'Ooops, something wrong appended.'
            },
            error: {
                'fileSize': 'The file size is too big (1M max).'
            }
        });
    </script>

{% endblock %}