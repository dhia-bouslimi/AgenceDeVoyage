{% block body %}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <!--  This file has been downloaded from bootdey.com @bootdey on twitter -->
    <!--  All snippets are MIT license http://bootdey.com/license -->
    <title>bs4 product detail - Bootdey.com</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Réservation a l'hôtel {{ hotel.nom }}</h3>
            <h6 class="card-subtitle">{{ hotel.address }}</h6>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                  {#   <div><img src="{{ asset('uploads/hotel_image/'~hotel.image) }}" ></div>#}
                    <div class="offers_image_container">
                        <!-- Image by https://unsplash.com/@kensuarez -->
                        <div class="offers_image_background" style="background-image:url({{ asset('uploads/hotel_image/'~hotel.image) }})"></div>
                    </div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Description : </h4>
                    <p>{{ hotel.description }}</p>
                     <div>
                         <h4 class="box-title mt-5">Nombre d'etoile : </h4>

                         <!--nbr etoiles dynamiques-->
                         {% if hotel.etoile == 1 %}
                             <div class="rating rating_1">
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                             </div>
                         {% endif %}
                         {% if hotel.etoile == 2 %}
                             <div class="rating rating_2">
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                             </div>
                         {% endif %}  {% if hotel.etoile == 3 %}
                             <div class="rating rating_3">
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                             </div>
                         {% endif %}  {% if hotel.etoile == 4 %}
                             <div class="rating rating_4">
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                             </div>
                         {% endif %}  {% if hotel.etoile == 5 %}
                             <div class="rating rating_5">
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                                 <i class="fa fa-star"></i>
                             </div>
                         {% endif %}
                         <!--//nbr etoiles dynamiques-->






                     </div>


                </div>



                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">Information chambre : </h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                            <tr>
                                <td width="390">Numéro Chambre</td>
                                <td>n°{{ chambres.numChambre  }}</td>
                            </tr>
                            <tr>
                                <td>Numéro Etage</td>
                                <td>n°{{chambres.numEtage  }}</td>
                            </tr>
                            <tr>
                                <td>type de Lit</td>
                                <td>{{  chambres.typeNbBLit}}</td>
                            </tr>
                            <tr>
                                <td>Prix par nuit</td>
                                <td>{{  chambres.prixParNuit}} DT</td>
                            </tr>





                            </tbody>
                        </table>
                    </div>
                </div>



                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">Information Réservation : </h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                            <tr>
                                <td width="390">type de Pension</td>
                                <td>{{reservation.typePension  }}</td>
                            </tr>

                            <tr>
                                <td>Prix Total</td>
                                <td>{{  reservation.prixTotal}} DT</td>
                            </tr>

                            <tr>
                                <td>Date de Début </td>
                                <td>{{reservation.darrive|date('d-m-Y')  }}</td>
                            </tr>
                            <tr>
                                <td>Date de Fin </td>
                                <td>{{  reservation.dquitte|date('d-m-Y')}}</td>
                            </tr>
                             <tr>
                                <td>Etat de reservation</td>
                                 <td>
                                 {% if reservation.etat  == 0 %}
                                 <span style="width: 78px;height: 33px;text-align: center;padding: 11px;"  class="badge badge-warning">En cours</span>

                                 {% elseif reservation.etat == 1 %}
                                 <span style="width: 78px;height: 33px;text-align: center;padding: 11px;" class="badge badge-success">Accepté</span>
                                  {% endif %}
                                 </td>
                             </tr>




                            </tbody>
                        </table>
                    </div>
                </div>








            </div>
        </div>
    </div>
</div>

<style type="text/css">
    body{
        background-color: #edf1f5;
        margin-top:20px;
    }
    .card {
        margin-bottom: 30px;
    }
    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid transparent;
        border-radius: 0;
    }
    .card .card-subtitle {
        font-weight: 300;
        margin-bottom: 10px;
        color: #8898aa;
    }
    .table-product.table-striped tbody tr:nth-of-type(odd) {
        background-color: #f3f8fa!important
    }
    .table-product td{
        border-top: 0px solid #dee2e6 !important;
        color: #728299!important;
    }
</style>

