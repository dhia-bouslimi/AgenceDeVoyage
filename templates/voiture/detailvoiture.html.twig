{% extends "base.html.twig" %}

{% block body %}

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container-fluid">


                <div class="row">
                    <a href="{{ path('voiture_list') }}">
                        <i class="fa fa-arrow-circle-left" style="font-size: 30px;"></i>

                    </a>

                </div>
                <div class="row" style="display: flex;align-items: center;justify-content: center;">

                    <div class="col-md-6 col-lg-3">

                        <div class="card m-b-20">
                            <img class="card-img-top img-fluid" src="{{ asset('uploads/produit_image/'~image) }}" alt="Card image cap">
                            <div class="card-body">
                                <h4 class="card-title"> voiture numero : <span style="color:#ff5b5b"> {{id }}</h4>
                                <p class="card-text">serie : <span style="color:#ff5b5b">{{ serie }}</span> </p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">marque: <span style="color:#ff5b5b"> {{ marque }}</span> </li>
                                <li class="list-group-item">model : <span style="color:#ff5b5b"> {{ model }}</li>
                                <li class="list-group-item">prix :<span style="color:#ff5b5b"> {{ prix }}</li>
                                <li class="list-group-item">description :<span style="color:#ff5b5b"> {{ description }}</li>
                                <li class="list-group-item">couleur :<span style="color:#ff5b5b">  {{ couleur }}</li>
                            </ul>
