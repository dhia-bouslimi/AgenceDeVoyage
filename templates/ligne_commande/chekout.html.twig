{% block body %}

    <section class="section-reservation bg1-pattern p-t-100 p-b-113">
    <div class="container">
    <div class="row">
    <div class="col-lg-12 p-b-30">
    <div class="t-center">
        <h2 class="tit2 t-center">Detail de la commande</h2>
    </div>

    <form  class="wrap-form-reservation size22 m-l-r-auto" action="/checkout" methode="POST">
        <div class="row">
            <div class="col-md-4">
                <span class="txt9">nom:</span>
                <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                    <input class="bo-rad-10 sizefull txt10 p-l-20" type="text" data-validate = "name is required" name="billing_firstname" placeholder="First Name" value="{{ app.user.name}}">
                </div>
            </div>

                <div class="col-md-4">
                    <span class="txt9">Prénom:</span>
                    <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                            <input class="bo-rad-10 sizefull txt10 p-l-20"  type="text" required name="billing_lastname" placeholder="Last Name" value="{{  "bouslimi"}}">
                        </div>
                    </div>


            <div class="col-md-4">
                <span class="txt9">Adress:</span>
                <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                            <input class="bo-rad-10 sizefull txt10 p-l-20"  type="text" required name="billing_street" placeholder="Street Address" value="{{app.user.email}}">
                        </div>
                    </div>



        </div>

                <!-- Cart -->
                <h2>Produits de votre panier</h2>

                {% for item in items %}
                    <!-- Single Product Block -->
                    <div class="item angled-bg">
                        <div class="row">
                            <div class="col-xs-6 col-md-9">
                                <h4 class="tit2 t-center" style=" color: #0e0f15 ">{{item.produit.nom }}</h4>
                            </div>
                            <div class="col-xs-6 col-md-3 align-right">
                                <div class="price">
                                    <span class="tit2 t-center" style="font-size: large ; color: #0e0f15 ">{{ item.quantite_produit }} × <span class="tit2 t-center" style="font-size: large ; color: #0e0f15 ">{{ item.produit.Prix }}DT</span></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /Single Product Block -->
                {% endfor %}

                <div  class="tit2 t-center" style="font-size: x-large">
                    Total: <strong class="tit2 t-center" style="font-size: large ; color: #0e0f15 ">{{total}}DT</strong>
                </div>


                <!-- Order Button -->
        <div class="wrap-btn-booking flex-c-m m-t-6">
                    <button type="submit" class="btn3 flex-c-m size13 txt11 trans-0-4">Place Order</button>

                </div>


    </form>
    </div>
    </div>
    </div>
    </section>
{% endblock %}