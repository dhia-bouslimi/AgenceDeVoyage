{% extends 'base2.html.twig' %}
{% block search %}
{% endblock %}
{% block body %}

	<section class="section-reservation bg1-pattern p-t-100 p-b-113">
				<div class="col-lg-12 p-b-30">
					<div class="t-center">

    {% if items|length > 0 %}
        <table class="table">
            <thead>
            <tr>
                <th class="search_item" style="font-size: x-large;color: chocolate">Image</th>
                <th class="search_item" style="font-size: x-large;color: chocolate">Produit</th>
                <th class="search_item" style="font-size: x-large;color: chocolate">Prix </th>
                <th class="search_item" style="font-size: x-large;color: chocolate">Quantité</th>
                <th class="search_item" style="font-size: x-large;color: chocolate">Prix</th>
                <th class="search_item" style="font-size: x-large;color: chocolate">Modifier QT</th>
                <th></th>
                <th></th>
                <th></th>

            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td><img src="{{ asset('uploads/produit_image/' ~ item.produit.image ) }}"  width="200" height="150" /></td>
                    <td class="tit2 t-center" style="font-size: large ; color: #0e0f15">{{ item.produit.nom }}</td>
                    <td class="tit2 t-center" style="font-size: large ; color: #0e0f15">{{ item.produit.prix }}</td>
                    <td class="tit2 t-center" style="font-size: large ; color: #0e0f15">{{ item.quantite_produit }}</td>
                    <td class="tit2 t-center" style="font-size: large ; color: #0e0f15">{{ item.produit.prix * item.quantite_produit }}</td>
                    <td class="tit2 t-center" style="font-size: large ; color: #0e0f15">
                        <form  class="wrap-form-reservation size22 m-l-r-auto" action="{{path('updateProdPanier', {id: item.produit.id,nb:-1})}}">
                            <div class="container">
                                <div class="row">
                                <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                                <input class="bo-rad-10 sizefull txt10 p-l-20"  type='number' name='qt' />
                            </div>
                                </div>
                            </div>
                            <div class="wrap-btn-booking flex-c-m m-t-6">
                            <button type='submit' class="button search_button">Modifier</button>
                            </div>
                        </form>

                    </td>
                    <td class="text-right">
                        <a href="{{ path('panier_supprime', {'id': item.produit.id}) }}" class="btn btn-danger btn-sm">
                            supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="4" class="search_item" style="font-size: x-large;color: chocolate">Total:
                </td>
                <td class="tit2 t-center" style="font-size: large ; color: #0e0f15 ">{{ total }}</td>
                <td >
                    <a href = "{{ path('checkout') }}" >
                        <div class="wrap-btn-booking flex-c-m m-t-6">
                            <a href="{{ path('list_categories') }}" class="button search_button">Ajouter Produit</a>
                        </div>
                    </a>
                </td>
                <td >
                    <a href="{{ path('emptypanier')}}"  >
                        <div class="wrap-btn-booking flex-c-m m-t-6">
                        <button type="submit" class="button search_button">Vider Panier</button>
                        </div>
                    </a>
                </td>

            </tr>

            <tr>
                <td colspan="4" class="tit2 t-center"></td>
                <td class="tit2 t-center" style="font-size: large ; color: #0e0f15 " ></td>

                <td >
                    <a href = "{{ path('checkout') }}" >
                        <div class="wrap-btn-booking flex-c-m m-t-6">
                        <button type="submit" class="button search_button">commandé</button>
                        </div>
                    </a>
                </td>

                <td >
                    <a href="{{ path('commande_liste') }}">
                        <div class="wrap-btn-booking flex-c-m m-t-6">
                            <button  type="button" class="button search_button"> Imprimer</button>
                        </div>
                    </a>
                </td>



            </tr>
            </tfoot>
        </table>

    {% else %}


        <div class="col-lg-12 p-b-30">
        <div class="t-center">
        <p class="tit2 t-center">Votre panier est vide! </p>
        </div>
        </div>
                        <div class="wrap-btn-booking flex-c-m m-t-6">
        <a href="{{ path('list_categories') }}" class="button search_button">Ajouter Produit</a>
                        </div>
    {% endif %}
                    </div>
                </div>
    </section>
{% endblock %}