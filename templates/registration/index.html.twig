
{% extends 'base.html.twig' %}
{% block body %}
    <div class="account-pages"></div>
    <div class="clearfix"></div>
    <div class="wrapper-page">
        <div class="text-center">
            <a href="index.html" class="logo"><span>Admin<span>to</span></span></a>
            <h5 class="text-muted m-t-0 font-600">Responsive Admin Dashboard</h5>
        </div>
        <div class="m-t-40 card-box">
            <div class="text-center">
                <h4 class="text-uppercase font-bold m-b-0">Sign In</h4>
            </div>
            <div class="p-20">
                {{ form_start(form,{'attr': {'class': 'form-horizontal m-t-20'}}) }}

                <div class="form-group">
                    <div class="col-xs-12">
                        {{ form_row(form.name,{'attr': {'class': 'form-control','placeholder': 'Name'}}) }}

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        {{ form_row(form.email,{'attr': {'class': 'form-control','placeholder': 'Email'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        {{ form_row(form.password.first,{'attr': {'class': 'form-control','placeholder': 'Password'}} )}}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        {{ form_row(form.password.second,{'attr': {'class': 'form-control','placeholder': 'Confirm Password'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <div class="checkbox checkbox-custom">
                            <input id="checkbox-signup" type="checkbox" checked="checked">
                            <label for="checkbox-signup">I accept <a href="#">Terms and Conditions</a></label>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center m-t-40">
                    <div class="col-xs-12">
                        <button class="btn btn-custom btn-bordred btn-block waves-effect waves-light" type="submit">
                            Register
                        </button>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
        <!-- end card-box -->

        <div class="row">
            <div class="col-sm-12 text-center">
                <p class="text-muted">Already have account?<a href="{{ path('app_login') }}" class="text-primary m-l-5"><b>Sign In</b></a></p>
            </div>
        </div>

    </div>


{% endblock %}


