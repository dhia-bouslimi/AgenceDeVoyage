{% extends 'base2.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

<div class="container">


    <div class="row" style="display: flex;justify-content: center;align-items: center">

        <div class="col-md-5">
    <h1>User</h1>

    <table class="table">

        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Fname</th>
                <td>{{ user.fname }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ user.gender }}</td>
            </tr>
            <tr>
                <th>Num</th>
                <td>{{ user.num }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Confirmpassword</th>
                <td>{{ user.confirmpassword }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img src="{{ asset ('uploads/' ~ user.image) }}" alt=""height="80px" width="80px">

                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
</div>

{% endblock %}
