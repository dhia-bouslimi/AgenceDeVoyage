                            <a href="#" class="block-20" style="background-image: url({{ asset('uploads/produit_image/'~p.image) }});">
                           </a>
                            <div class="text mt-3 float-right d-block">

                               <h3 class="heading"><a href="#">{{ p.nom }}</a></h3>

                                <a><img src="{{ asset('uploads/produit_image/' ~ p.image ) }}" width="200" height="150"></a>

                                <a href="{{path('updateProdPanier', {id: p.id,nb:1})}}" class="button search_button" style="color: chocolate" > Ajouter au panier</a>
                            </div>
                       </div>
                   </div>

                {% endfor %}


            </div>
            <div class="row mt-5">

            </div>
        </div>
    </section>
{% endblock %}